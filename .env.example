# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
ADMIN_ID=your_telegram_user_id
BOT_USERNAME=YourBotUsername

# Database
DATABASE_URL=sqlite:///bot.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql://user:password@localhost/dbname

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_MAX_TOKENS=1000

# Default Channel
CHANNEL_ID_DEFAULT=-1001234567890

# Payment Providers

# Yookassa (RUB payments)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Stripe (USD payments)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# NOWPayments (Crypto payments)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PATH=/webhook
WEBHOOK_PORT=8080

# Feature Toggles
ENABLE_OPENAI_TEXT=true
ENABLE_OPENAI_IMAGES=true
ENABLE_RECEIPTS=true

# Application Limits
MAX_AD_TEXT_LENGTH=4000
MAX_MEDIA_FILES=10
MAX_FILE_SIZE_MB=50

# Company Information (for receipts)
COMPANY_NAME=AdDesigner Hub
COMPANY_ADDRESS=123 Main St, City, Country
COMPANY_PHONE=+1-234-567-8900
COMPANY_EMAIL=support@addesignerhub.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Redis (optional)
REDIS_URL=redis://localhost:6379/0